<%- include('../partials/header') %>

<div class="jumbotron text-center">
  <div class="container ">
    <!-- <i class="fas fa-key fa-6x"></i> -->
    <i class="fas fa-tractor fa-6x"></i>
    <h1 class="display-3">MyFarms</h1><br>

<div class="row">

  <% usersFarms.forEach(function(role){ %>

  <div class="col-lg-4">
    <div class="card">
      <div class="card-header">
        <h3><%=role.farm.farmName%></h3>
      </div>
      <div class="card-body">
        <h5 class="card-title">Customer#: <%=role.farm.customerNo%></h5>
        <p class="card-text">Id: <%=role.farm._id%></p>
        <a class="card-button <% if(role.roleType !== 'Farm Manager') { %> <%='hideThis' %><% } %>" data-method="get" href="/farms/delete/<%=role.farm._id%>" onclick="return confirm('Are you sure you want to delete this item?');" role="button" >
          <i class="far fa-trash-alt"></i>
        </a>
        <a class="card-button" data-method="get" href="/farms/<%=role.farm._id%>" role="button" >
          <i class="fas fa-pencil-alt"></i>
        </a>
      </div>
    </div>
  </div>

  <% }) %>

  <div class="col-lg-4">
    <div class="card">
      <div class="card-header">
        <h3>To Add a Farm...</h3>
      </div>
      <div class="card-body">
        <form action="/farms" method="POST">
          <div class="form-group">
            <input type="text" class="form-control" name="farmName" required placeholder="enter Name for New Farm">
          </div>
          <div class="form-group">
            <input type="text" class="form-control" name="customerNo" placeholder="enter customer# for this farm (optional)">
          </div>
          <button type="submit" class="card-button">
            <i class="fas fa-plus-circle"></i>
          </button>
        </form>


      </div>
    </div>
  </div>

</div>


  </div>
</div>


<%- include('../partials/footer') %>
